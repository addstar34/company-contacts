<p id="notice"><%= notice %></p>

<h1><%= @contact.full_name %></h1>
<h2>Company: <%= link_to @contact.company.name, company_path(@company) %></h2>
<h2>Relationships</h2>
<%= link_to 'New Relationship', new_company_contact_relationship_path(@company, @contact) %>

<br><br>

<% if @relationships.present? %>
  <table>
    <thead>
      <tr>
        <th>Contact</th>
        <th>Relation</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @relationships.each do |relationship| %>
        <tr>
          <td><%= relationship.relation.full_name %></td>

          <td><%= link_to 'Destroy', company_contact_relationship_path(@company, @contact, relationship), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
<% end %>
